<section class="scrollable padder" style="overflow: scroll;"> 
	<div class="m-b-md"> 
		<h3 class="m-b-none">Wifis</h3> 
	</div> 
	<section class="panel panel-default"> 
		<header class="panel-heading"> Wifis 
			<i class="fa fa-info-sign text-muted" ></i> 
		</header> 
		<div class="table-responsive"> 
			<table id='wifis' class="table table-striped m-b-none" data-ride="datatables"> 
				<thead> 
					<tr> 
						<th width="15%">Name</th> 
						<th width="20%">Address</th> 
						<th width="15%">Latitude</th> 
						<th width="15%">Longitude</th> 
						<th width="20%">Price per 100MB</th>
						<th width="15%">Speed</th>
					</tr> 
				</thead> 
				<tbody> 
					<% @wifi.each do |wifi| %>
					<tr>
						<td><%= wifi.name %></td>
						<td><%= wifi.address %></td>
						<td><%= wifi.lat %></td>
						<td><%= wifi.long %></td>
						<td><%= wifi.price %></td>
						<td><%= wifi.avg_speed %> KB</td>
					</tr>
					<% end %>
				</tbody> 
			</table> 
		</div> 
	</section> 
</section>

<script>
  $(function () {
    $("#wifis").DataTable({
      "paging": true,
      "lengthChange": true,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": true
    });
  });
</script>